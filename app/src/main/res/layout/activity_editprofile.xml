<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/collage"
    android:orientation="vertical">
    <!--android:scrollbarAlwaysDrawVerticalTrack="true">-->



    <RelativeLayout
        android:layout_width="1000dp"
        android:layout_height="300dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/relative_layout_background"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="30dp">

        <LinearLayout
            android:id="@+id/linearmain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp">



            <LinearLayout
                android:id="@+id/mainLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:baselineAligned="false"
                android:orientation="vertical">




                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/user_profile_photo"
                    android:ems="10"
                    android:textSize="20sp"
                    />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/mainLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="vertical">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_newconfirmpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/TextLabel">

                    <TextView


                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView"
                        android:ems="10"

                        android:textSize="14dp"

                        android:inputType="text" />

                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:id="@+id/resetpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Reset Password"
                    android:ems="10"
                    android:textSize="10sp"
                    />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email is not Verified"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#ff3030"
                    android:layout_marginTop="25dp"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="35dp"


                    />
                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"

                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="50dp"
                     />
            </LinearLayout>






        </LinearLayout>




    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"

        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/user_editprofile_background"
        android:elevation="4dp"
        android:orientation="horizontal"

        />

</RelativeLayout>