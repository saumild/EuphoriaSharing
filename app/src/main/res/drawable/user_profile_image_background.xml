<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">

            <solid
                android:color="#f2eaea"/>

            <size
                android:width="20dp"
                android:height="20dp"/>
            <stroke
                android:color="#ccc9c9"
                android:width="2dp"
                />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#f1f0ef"/>
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>